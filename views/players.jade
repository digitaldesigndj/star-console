extends layout

block content
  .page-header
    h1 Boundstar Player Manager
  .row
    .well.col-sm-2#connections
        h3 Right Now
        p 
          span #{players.length}
        h5 player accounts
    .clearfix
    .col-sm-12
      legend Players
      table#visits.table.table-bordered.table-striped.table-condensed
        thead
          tr
            td Character
            td Email
            td Rank
            td Forum
            td Rep
            td Posts
            td Votes
            td Worlds
            td Ip
            td Country
            td Region
            td City
            td System Coords
        tbody
          each player in players
            tr
              td #{player.player}
              td 
                a(href='/player/#{player.email}') #{player.email}
              td #{player.rank}
              td 
                - var forum_url = 'http://forum.boundstar.com/user/'+player.forum.replace(/ /g,'-').toLowerCase()
                a(href='#{forum_url}', target='_blank') #{player.forum}
              td #{player.forum_rep}
              td #{player.forum_posts}
              td #{player.thismonth_votes}
              if player.system
                td #{player.system.size}
              else
                td 0
              td #{player.ip}
              td #{player.country}
              td #{player.region}
              td #{player.city}
              td #{player.system_coords}

